@using HallOfFameMVC.Controllers;
@model HallOfFameMVC.Models.RegisterViewModel;

@{
    ViewData["Title"] = "Register";
}

<style>
    .custom-bg {
        background-color: #f8f9fa; /* Light gray background */
        min-height: 100vh; /* Full height */
        display: flex;
        align-items: center;
        justify-content: center;
    }
    .card {
        border-radius: 15px;
    }
    .card-header {
        border-top-left-radius: 15px;
        border-top-right-radius: 15px;
    }
    .btn-success {
        transition: background-color 0.3s ease;
    }
    .btn-success:hover {
        background-color: #218838;
    }
    .text-decoration-none:hover {
        text-decoration: underline;
    }
</style>

<div class="custom-bg">
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card shadow-sm">
                    <div class="card-header text-center bg-primary text-white">
                        <h2>Register</h2>
                    </div>
                    <div class="card-body">
                        <form asp-action="CreateNewUser" method="post" novalidate id="registerForm">
                            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                            <div class="mb-3">
                                <label asp-for="UserID" class="form-label">User ID</label>
                                <input asp-for="UserID" class="form-control" />
                                <span asp-validation-for="UserID" class="text-danger" style="display:none;"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="LoginName" class="form-label">Full Name</label>
                                <input asp-for="LoginName" class="form-control" />
                                <span asp-validation-for="LoginName" class="text-danger" style="display:none;"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="UserEmail" class="form-label">Email</label>
                                <input asp-for="UserEmail" class="form-control" />
                                <span asp-validation-for="UserEmail" class="text-danger" style="display:none;"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="Password" class="form-label">Password</label>
                                <input asp-for="Password" type="password" class="form-control" />
                                <span asp-validation-for="Password" class="text-danger" style="display:none;"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="TeamName" class="form-label">Team Name</label>
                                <input asp-for="TeamName" class="form-control" />
                                <span asp-validation-for="TeamName" class="text-danger" style="display:none;"></span>
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Submission Rights</label>
                                <div class="form-check">
                                    <input asp-for="SubmissionRights" type="radio" value="true" class="form-check-input" id="submissionRightsYes" />
                                    <label class="form-check-label" for="submissionRightsYes">Yes</label>
                                </div>
                                <div class="form-check">
                                    <input asp-for="SubmissionRights" type="radio" value="false" class="form-check-input" id="submissionRightsNo" />
                                    <label class="form-check-label" for="submissionRightsNo">No</label>
                                </div>
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Review Rights</label>
                                <div class="form-check">
                                    <input asp-for="ReviewRights" type="radio" value="true" class="form-check-input" id="reviewRightsYes" />
                                    <label class="form-check-label" for="reviewRightsYes">Yes</label>
                                </div>
                                <div class="form-check">
                                    <input asp-for="ReviewRights" type="radio" value="false" class="form-check-input" id="reviewRightsNo" />
                                    <label class="form-check-label" for="reviewRightsNo">No</label>
                                </div>
                            </div>
                            <input type="submit" value="Register" class="btn btn-success w-100 p-2" />
                        </form>
                        <div class="text-center mt-3">
                            <a asp-controller="Login" asp-action="Login" class="text-decoration-none">Back</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@if (ViewData["Message"] != null)
{
    <div class="alert alert-danger">@ViewData["Message"]</div>
}

@section Scripts {
    <script>
        (function () {
            var form = document.getElementById('registerForm');
            form.addEventListener('submit', function (event) {
                var validationSummary = document.querySelector('[asp-validation-summary="ModelOnly"]');
                if (!form.checkValidity()) {
                    event.preventDefault();
                    validationSummary.style.display = 'block';
                }
            });
        })();
    </script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial.cshtml");
    }
}